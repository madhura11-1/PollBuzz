<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context=".SplashScreen"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imagee"
        android:layout_width="81dp"
        android:layout_height="76.2dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="200dp"
         />

    <com.akexorcist.roundcornerprogressbar.indeterminate.IndeterminateRoundCornerProgressBar
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/imagee"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        app:rcAnimationSpeedScale="6"
        app:rcBackgroundColor="@color/white"
        app:rcProgressColor="@color/colorPrimary"
        app:rcRadius="15dp"/>

    </RelativeLayout>
