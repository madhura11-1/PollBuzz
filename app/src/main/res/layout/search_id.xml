<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/linear_id_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >


        <ImageButton
            android:id="@+id/id_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow2"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/id_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter poll ID"
            android:textColorHint="@color/font_color"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/id_search_back"
            android:layout_toLeftOf="@id/search_pollid"
            android:backgroundTint="@color/font_color"
            android:gravity="bottom"
            />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/search_pollid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/font_color"
            android:text="Search Poll"
            android:textSize="17sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
             />



    </RelativeLayout>

</LinearLayout>